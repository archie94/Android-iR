<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp"
    android:weightSum="100" >

    <ImageView
        android:id="@+id/image_editor_imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_launcher"
        android:layout_weight="85" />
    
    <!--   Dummy item to prevent Edit Text  from receiving focus -->
    <LinearLayout
    
    		android:focusable="true" 
    		android:focusableInTouchMode="true"
    		android:layout_width="0px" 
    		android:layout_height="0px"
    	/>

    <EditText
        android:id="@+id/image_editor_editText_width"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter width in pixels "
        android:layout_weight="5" >

    </EditText>

    <EditText
        android:id="@+id/image_editor_editText_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:hint="Enter height in pixels "
        android:layout_weight="5" />

    <Button
        android:id="@+id/image_editor_button_resize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resize"
        android:layout_gravity="center_horizontal"
        android:layout_weight="5" />

</LinearLayout>
